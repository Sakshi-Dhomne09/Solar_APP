<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llScroll"
    android:background="#fff"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/getScroll"
        >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/shareImgeview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/share_icon"
            android:translationZ="90909dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"

            >

        </ImageView>


        <TextView
            android:id="@+id/nameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="@color/black"
            android:translationZ="999dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="104dp"
            >

        </TextView>

        <TextView
            android:id="@+id/solarWattNumTextview"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:hint="Watttt"
            android:textColor="@color/black"
            android:background="@color/white"
            android:translationZ="999dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="6dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="86dp"
            >

        </TextView>
        <TextView
            android:id="@+id/solarWattNum2Textview"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:hint="Watttt"
            android:textColor="@color/black"
            android:background="@color/white"
            android:translationZ="999dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="6dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="444dp"
            >

        </TextView>

        <TextView
            android:id="@+id/solarWattNum3Textview"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:hint="Watttt"
            android:textColor="@color/black"
            android:background="@color/white"
            android:translationZ="999dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="6dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="453dp"
            >

        </TextView>

        <TextView
            android:id="@+id/solarWattNumPriceTextview"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textColor="@color/black"
            android:background="@color/white"
            android:translationZ="999dp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:fontFamily="sans-serif"
            android:textSize="6dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="453dp"
            >

        </TextView>

        <TextView
            android:id="@+id/solarWattTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Watttt"
            android:textColor="@color/black"
            android:background="@color/white"
            android:translationZ="999dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:layout_marginLeft="197dp"
            android:layout_marginTop="122dp"
            >

        </TextView>

        <ImageView
            android:id="@+id/ihih1"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@drawable/pdf_img_1"></ImageView>

        <ImageView
            android:id="@+id/ihih2"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_below="@+id/ihih1"
            android:scaleType="fitCenter"
            android:src="@drawable/pdf_img_2"></ImageView>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>