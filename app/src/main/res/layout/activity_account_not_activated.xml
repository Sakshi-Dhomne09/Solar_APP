<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_gradient_sqaure" >


    <TextView
        android:id="@+id/akdnsidbibk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ibmplex"
        android:text="Sorry, Your Account is not activated"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/akdnsidbibk"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ibmplex"
        android:layout_marginTop="10dp"
        android:text="Contact Admin to get your Account Activated."
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contactus_CallButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Call"
            android:textSize="10sp"
            android:fontFamily="@font/ibmplex"
            android:textColor="#ffffff"
            android:background="@color/transparent"
            android:textStyle="bold"
            />
